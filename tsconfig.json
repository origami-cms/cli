{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es2015.promise",
      "es2016.array.include"
    ],
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true
  }
}
